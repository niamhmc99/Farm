<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".emissions.DairyCalculationActivity">

    <TextView
        android:id="@+id/txtViewDairy"
        android:layout_width="372dp"
        android:layout_height="142dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/libre_baskerville_bold"
        android:text="@string/dairy_emissions"
        android:textColor="@color/darkGreen"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        android:layout_marginStart="5dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextNumDairyCows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/libre_baskerville"
        android:hint="@string/number_of_milk_producing_cows"
        android:inputType="number"
        android:textColorHint="@color/green"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465"
        app:met_baseColor="@color/darkGreen"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/darkGreen"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextAverageMilkYield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/libre_baskerville"
        android:hint="@string/average_milk_yield_per_cow"
        android:inputType="numberDecimal"
        android:textColorHint="@color/green"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603"
        app:met_baseColor="@color/darkGreen"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/darkGreen"
        app:met_singleLineEllipsis="true" />

    <Button
        android:id="@+id/calculateBtn"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="calculateDairyEmissions"
        android:fontFamily="@font/libre_baskerville_bold"
        android:text="@string/calculate"
        android:textSize="18sp"
        app:backgroundTint="@color/green"
        app:icon="@drawable/co2_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.671" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="700dp"
        app:itemBackground="@color/green"
        app:itemIconTint="@drawable/item_selected"
        app:itemTextColor="@drawable/item_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        tools:ignore="NotSibling" />
</androidx.constraintlayout.widget.ConstraintLayout>