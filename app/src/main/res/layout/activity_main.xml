<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/freshgrass">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="399dp"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">


            <TextView
                android:id="@+id/txtViewFileFarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/file_a_farm"
                android:textColor="@color/white"
                android:fontFamily="@font/fredericka_the_great"
                android:textStyle="bold"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/txtView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtViewFileFarm"
                android:text="@string/file_a_farm"
                android:textColor="@color/white" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/imageButtonLogout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-6dp"
            android:background="@color/white"

            android:src="@drawable/ic_logout" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="26dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButtonAnimals"
                        android:src="@drawable/cowcalf"
                        android:scaleType="fitXY"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:background="@color/white"
                        android:contentDescription="@string/animals"
                        android:onClick="clickAnimals"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Animals"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="26dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButtonWeather"
                        android:src="@drawable/weather"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:background="@color/white"
                        android:onClick="clickWeather"
                        android:contentDescription="@string/weather" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weather"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="26dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButtonVets"
                        android:src="@drawable/vet3"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:onClick="clickVets"
                        android:background="@color/white"
                        android:contentDescription="@string/vets" />

                    <TextView
                        android:id="@+id/textViewVet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vets"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="26dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButtonToDoList"
                        android:src="@drawable/todoicon"
                        android:layout_width="120dp"
                        android:scaleType="fitXY"
                        android:layout_height="100dp"
                        android:onClick="clickToDoList"
                        android:background="@color/white"
                        android:contentDescription="@string/todolist" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Do List"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="26dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButtonGoogleMap"
                        android:src="@drawable/google_maps"
                        android:scaleType="fitXY"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:background="@color/white"
                        android:contentDescription="@string/nearbyPlaces"
                        android:onClick="clickGoogleMap"/>

                    <TextView
                        android:id="@+id/textViewGoogleMaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nearby Resources"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="26dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButtonExpenses"
                        android:src="@drawable/expense"
                        android:scaleType="fitXY"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@color/white"
                        android:contentDescription="@string/expense" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expenses"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </GridLayout>


    </LinearLayout>

</ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="@color/green"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>