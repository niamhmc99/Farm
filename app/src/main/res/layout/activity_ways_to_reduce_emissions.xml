<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".emissions.WaysToReduceEmissionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_navigation_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">


        <LinearLayout
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageEmissions"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_gravity="center"
                android:contentDescription="@string/emissions"
                android:src="@drawable/farm_carbon_edit" />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:fontFamily="@font/libre_baskerville_bold"
                android:text="@string/title"
                android:gravity="center"
                android:textColor="@color/darkGreen"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_margin="6dp"
                android:fontFamily="@font/libre_baskerville"
                android:text="Title"
                android:textColor="@color/darkGreen"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textMoreDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/libre_baskerville_bold"
                android:text="@string/for_more_detail_click_here"
                android:textColor="@color/darkGreen"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textVisitWebsite"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/libre_baskerville_bold"
                android:text="@string/visit_website"
                android:textColor="@color/darkGreen"
                android:textSize="14sp" />


        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="400dp"
            app:itemBackground="@color/green"
            app:itemIconTint="@drawable/item_selected"
            app:itemTextColor="@drawable/item_selected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu"
            tools:ignore="NotSibling" />

</androidx.constraintlayout.widget.ConstraintLayout>