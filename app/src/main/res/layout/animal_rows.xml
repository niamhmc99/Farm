<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:elevation="10dp"
        android:background="@color/green"
        android:alpha="0.8"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/update_button"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@drawable/rounded_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageAnimalProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="133dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/animalsmall"
            android:shape="ring"
            app:civ_border_color="#E2E1E1"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/textViewTagNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/tag_number"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAnimalName"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTagNumber"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/name"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/textViewDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAnimalName"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:text="@string/d_o_b"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/breed"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:ignore="UnknownId" />


        <TextView
            android:id="@+id/animalRegisterTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Date Entered Herd: "
            android:textStyle="italic" />

    </LinearLayout>


