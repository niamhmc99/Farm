<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="#FFFFE8">


    <RelativeLayout
        android:layout_width="393dp"
        android:layout_height="match_parent"
        android:padding="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageAnimalProfile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/animalsmall"
            app:civ_border_color="#E2E1E1"
            app:civ_border_width="3dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewTagNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/imageAnimalProfile"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/tag_number"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imageAnimalProfile"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/textViewAnimalName"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTagNumber"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imageAnimalProfile"
            android:text="@string/name"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            tools:ignore="UnknownId"
            android:layout_toEndOf="@id/imageAnimalProfile"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/textViewDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAnimalName"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/imageAnimalProfile"
            android:text="@string/d_o_b"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            tools:ignore="UnknownId"
            android:layout_toEndOf="@id/imageAnimalProfile"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/textViewBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDob"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imageAnimalProfile"
            android:text="@string/breed"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            tools:ignore="UnknownId"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/imageAnimalProfile" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>