<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/appointmentTitleUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/libre_baskerville"
        android:hint="@string/appointmentTitle"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/darkGreen"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:met_baseColor="@color/darkGreen"
        app:met_floatingLabel="normal"
        app:met_primaryColor="@color/darkGreen"
        app:met_singleLineEllipsis="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/appointmentDescriptionUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/libre_baskerville"
        android:hint="@string/appointmentDescription"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/darkGreen"
        android:textSize="17sp"
        app:met_baseColor="@color/darkGreen"
        app:met_floatingLabel="normal"
        app:met_primaryColor="@color/darkGreen"
        app:met_singleLineEllipsis="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/appointmentDateUpdate"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:fontFamily="@font/libre_baskerville"
            android:hint="@string/date_of_appointment"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/darkGreen"
            android:textSize="17sp"
            app:met_baseColor="@color/darkGreen"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/darkGreen"
            app:met_singleLineEllipsis="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="123dp" />

        <ImageView
            android:id="@+id/updateDateImageViewPicker"
            android:layout_width="77dp"
            android:layout_height="57dp"
            android:contentDescription="@string/click_calendar_to_change_date"
            android:outlineAmbientShadowColor="@color/colorBlack"
            android:outlineSpotShadowColor="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.957"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            tools:targetApi="p" />

    </RelativeLayout>



</LinearLayout>